<html>
    <head>
        <title>
            <%= title  %>
        </title>
        <!-- favicon -->
        <link rel="shortcut icon" href="<%= assetPath('images/Ninja-Locus-favicon-v1.png') %>" type="image/x-icon">

        <!-- meta tag for SEO -->
        <meta name="description" content="Ninja Locus is a social media website. It's clone of facebook where you can make new friends add posts, comments, likes, privately chat with friends. You can also sign in and sign up with Goolge.">
        <meta name="keywords" content="Social media, chat with friends, personal chat, personal chatting, chatting, post, posts, comment, comments, like, likes, add friends, friends, clone of facebook, facebook, project, Node.js projects, website, good projects, Sumit Yadav">
        <meta name="author" content="Sumit Yadav">
        
        <!-- font awesome CDN -->
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.2/css/all.css" integrity="sha384-vSIIfh2YWi9wW0r9iZe7RJPrKwp6bG+s9QZMoITbCckVJqGCCRhc+ccxNcdpHuYu" crossorigin="anonymous">
        
        <!-- animate.css CDN -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

        <!-- noty CDN -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css" integrity="sha512-0p3K0H3S6Q4bEWZ/WmC94Tgit2ular2/n0ESdfEX8l172YyQj8re1Wu9s/HT9T/T2osUw5Gx/6pAZNk3UKbESw==" crossorigin="anonymous" />
        <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js" integrity="sha512-lOrm9FgT1LKOJRUXF3tp6QaMorJftUjowOWiDcG5GFZ/q7ukof19V0HKx/GWzXCdt9zYju3/KhBNdCLzK8b90Q==" crossorigin="anonymous"></script>

        <!-- Viewport meta tag -->
        <meta name="viewport" content="width=device-width, initial-scale=1" >
        
        <!-- jQuery AJAX CDN -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous"></script>

        <!-- page css -->
        <link rel="stylesheet" href="<%= assetPath('css/layout.css') %>">
        <link rel="stylesheet" href="<%= assetPath('css/header.css') %>">
        <link rel="stylesheet" href="<%= assetPath('css/footer.css') %>">

        <%- style %>
        
    </head>

    <body>
        <%- include('_header'); %>

        <main id="layout-main">
            <%- body %>

        </main>


        <!-- Todo: Make the footer -->

        <%- script %>


        <!-- Using noty for displaying flash messages -->
        <script>
            // Display the flash messages if present 
            <% if (flash.success && flash.success.length > 0) {%>
                new Noty({
                    theme: 'relax',
                    text: "<%= flash.success %>",
                    type: 'success',
                    layout: 'topRight',
                    timeout: 1500
                    
                }).show();    
            <%} %>

            <% if (flash.error && flash.error.length > 0) {%>
                new Noty({
                    theme: 'relax',
                    text: "<%= flash.error %>",
                    type: 'error',
                    layout: 'topRight',
                    timeout: 1500
                    
                }).show();    
            <%} %>
        </script>
        
    </body>
</html>