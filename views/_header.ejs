<header>
    <span id="app-name">Codial</span>

    <ul type = "none">
        <% if (locals.user){ %>
            <li>
                <a href="/users/profile/<%= locals.user.id %>">
                    <%= user.name %>
                </a>
            </li>
            <li>
                <a href="/users/sign-out" id="sign-out">Sign Out</a>
            </li>
        <% }else{ %>

            <li>
                <a href="/users/sign-in">Sign In</a>
            </li>

            <li>
                <a href="/users/sign-up">Sign Up</a>
            </li>


        <% } %>
    </ul>

</header>